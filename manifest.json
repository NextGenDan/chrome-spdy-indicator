{
    "name": "HTTP/2 and SPDY indicator"
  , "description": "An indicator in the address bar for HTTP/2 and SPDY support by each website."
  , "version": "0.7.1"
  , "manifest_version": 2
  , "permissions": ["tabs"]
  , "background": {
        "persistent": true
      , "scripts": [
          "indicator.js"
        ]
    }
  , "content_scripts": [{
        "matches": ["*://*/*"]
      , "js": ["content.js"]
    }]
  , "page_action": {
        "default_title": "HTTP/2 and SPDY"
    }
  , "options_page": "options.html"
  , "web_accessible_resources": [
        "options.js"
    ]
  , "icons": {
        "128": "icon.png"
    }
}
